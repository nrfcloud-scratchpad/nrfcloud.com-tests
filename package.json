{
  "name": "@nrfcloud/nrfcloud.com-tests",
  "version": "1.0.0",
  "description": "Browser-based tests for nRFcloud.com",
  "scripts": {
    "test": "jest",
    "lint": "tslint --project ./tsconfig.json",
    "precommit": "npm run lint && npm test",
    "commitmsg": "validate-commit-msg"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nRFCloud/nrfcloud.com-tests.git"
  },
  "keywords": [
    "nRFCloud",
    "IoT",
    "NordicSemiconductor"
  ],
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/nRFCloud/nrfcloud.com-tests/issues"
  },
  "homepage": "https://github.com/nRFCloud/nrfcloud.com-tests#readme",
  "devDependencies": {
    "@types/jest": "^21.1.8",
    "@types/node": "^9.3.0",
    "colors": "^1.1.2",
    "dotenv": "^4.0.0",
    "husky": "^0.14.3",
    "jest": "^22.0.1",
    "jest-runner": "^22.0.1",
    "puppeteer": "^0.13.0",
    "request": "^2.83.0",
    "string-length": "^2.0.0",
    "ts-jest": "^22.0.0",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2",
    "validate-commit-msg": "^2.14.0",
    "yargs": "^10.0.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "bail": true
  },
  "engines": {
    "npm": "^5.0.0",
    "node": "^8.0.0"
  }
}
